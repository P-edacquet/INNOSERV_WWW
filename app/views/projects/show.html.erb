<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="title is-1 is-color-secondary mt-6">
    <%= @project.name %>
  </h1>
  <h2 class="subtitle is-3">
    <%= @project.description %>
  </h2>
  <p class="is-size-2 is-color-primary is-size-6">
    <% if @project.fieldOfEducation %>
      Education 
    <% end %>
    <% if @project.fieldOfWelfare %>
      Welfare 
    <% end %>
    <% if @project.fieldOfHealth %>
      Health 
    <% end %>
  </p>
  <div class="container has-text-centered mb-6">
    <%= video_tag '/videos/BlueAssist_06.03.2013-iphone.mp4', width: '600', class:"is-centered",poster: @project.image, controls: true, preload: 'none' %>
    <p>
      Website :
    </p>
    <%= link_to @project.website, @project.website, target: '_blank', rel:"noreferrer noopener", 'aria-label': 'Project\'s Website' %>
  </div>

  <p class="text is-size-6">
    <%= @project.information %>
  </p>
</div>

